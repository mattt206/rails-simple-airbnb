<div class="col-6 m-auto bg-light p-5">

  <%= simple_form_for @flat do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :url_image %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <%= f.submit class: "btn btn-outline-info" %>
  <%= link_to "back", flats_path, class: "btn btn-outline-info" %>
  <% end %>


</div>
