<div class="row">
  <div class="col-8">
    <div class="card p-4 mb-4">
      <h1><%= @flat.name %></h1>
      <p><%= @flat.address %></p>
    </div>

    <div class="card p-4">
        <h2>A bit more about this flat...</h2>
        <p><%= @flat.description %></p>
        <%= image_tag @flat.url_image, width: "300" %>
        <div class='my-3'>
          <%= link_to 'Edit', edit_flat_path(@flat), class: "btn btn-outline-info" %>
          <%= link_to 'Back', flats_path, class: "btn btn-outline-info" %>
          <%= link_to 'Delete', flat_path(@flat), class: "btn btn-outline-info", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
    </div>
  </div>

    <div class="col-4">
      <div class="card mb-3 p-4">
        <div class="input-group input-group-sm mb-3">
          <span class="input-group-text" id="inputGroup-sizing-sm">From: </span>
          <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="12/10/2022">
        </div>
        <div class="input-group input-group-sm mb-3">
          <span class="input-group-text" id="inputGroup-sizing-sm">To: </span>
          <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="12/10/2022">
        </div>
        <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
      </div>

      <div class="card p-4 mb-3">
        <h2>Details</h2>
        <p><%= @flat.price_per_night %>$</p>
        <p><%= "â˜º" * @flat.number_of_guests %> (<%= @flat.number_of_guests %>) </p>
      </div>

      <div class="card p-4">
        <div class="flex-align">
          <h2 class="no-mb">Share</h2>
          <div class="flex">
            <i class="fa-brands fa-facebook-square me-2"></i>
            <i class="fa-brands fa-twitter-square me-2"></i>
            <i class="fa-brands fa-pinterest-square me-2"></i>
          </div>
        </div>
      </div>
    </div>
</div>
